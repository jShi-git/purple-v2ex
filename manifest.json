{
  "name": "v2ex.purple",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "V2EX UI Extension",
  "homepage_url": "https://github.com/jShi-git/v2ex.purple",
  "author": "stuart",
  "options_page": "options.html",

  "icons": {
    "16": "v2ex.png",
    "48": "v2ex.png",
    "128": "v2ex.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.v2ex.com/",
    "*://v2ex.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.v2ex.com/*",
        "*://v2ex.com/*"
      ],
      "css": [
        "css/main.css"
      ],
      "js": [
        "js/jquery-2.1.1.min.js",
        "js/nice.js",
        "js/main.js"
      ],
      "run_at": "document_start"
    }
  ]
}
